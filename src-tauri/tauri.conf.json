{
  "build": {
    "beforeDevCommand": "trunk build",
    "devPath": "../dist",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "memetool",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs" : {
        "readFile" : true,
        "readDir" : true
      },
      "globalShortcut": {
        "all": false
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": [
          "**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/app-icon.icns",
        "icons/app-icon.ico",
        "icons/apple-touch-icon-base.png"
